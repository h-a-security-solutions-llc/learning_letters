{
  "name": "learning-letters-standalone",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Learning Letters - Standalone PWA with offline support for iOS/Android",
  "scripts": {
    "dev": "vite",
    "build": "npm run wasm:build && vue-tsc --noEmit && vite build",
    "build:quick": "vite build",
    "preview": "vite preview",
    "wasm:build": "cd src/wasm-scoring && wasm-pack build --target web --out-dir ../wasm-pkg",
    "wasm:build:dev": "cd src/wasm-scoring && wasm-pack build --target web --dev --out-dir ../wasm-pkg",
    "wasm:clean": "rm -rf src/wasm-pkg",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "vue-tsc --noEmit",
    "cap:init": "npx cap init 'Learning Letters' io.tellaro.learningletters --web-dir dist",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "build:ios": "npm run build && npx cap sync ios",
    "build:android": "npm run build && npx cap sync android"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.0",
    "workbox-window": "^7.0.0"
  }
}
